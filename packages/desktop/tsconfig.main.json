{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist/main",
    "rootDir": "./src/main",
    "noEmit": false,
    "jsx": "preserve"
  },
  "include": ["src/main/**/*"],
  "exclude": ["src/renderer/**/*"]
}
