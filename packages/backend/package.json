{
  "name": "@chatbot/backend",
  "version": "1.0.0",
  "description": "Backend services for AI chatbot built with Node.js and Koa",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio --port 5556",
    "db:seed": "tsx scripts/seed-data.ts",
    "db:reset": "prisma migrate reset",
    "docs:generate": "tsx scripts/generate-types.ts",
    "docs:serve": "tsx src/index.ts",
    "docs:open": "open http://localhost:3001/api/docs"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^14.0.0",
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "ioredis": "^5.8.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "3.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.1.0",
    "koa-logger": "^3.2.1",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^5.12.0",
    "redis": "^4.6.12",
    "swagger-jsdoc": "^6.2.8",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/koa": "^2.13.8",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.5",
    "@types/koa-helmet": "^6.1.0",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.4",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.6.2",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": false
      }
    }
  },
  "keywords": [
    "backend",
    "api",
    "chatbot",
    "ai",
    "koa",
    "typescript"
  ],
  "prisma": {
    "seed": "tsx scripts/seed-data.ts"
  }
}
