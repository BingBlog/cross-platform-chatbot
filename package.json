{
  "name": "cross-platform-chatbot",
  "version": "1.0.0",
  "description": "Cross-platform AI Chatbot supporting desktop (Electron), mobile (React Native), and web (React) with 80%+ code reuse",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter web dev\" \"pnpm --filter desktop dev\"",
    "dev:web": "pnpm --filter web dev",
    "dev:desktop": "pnpm --filter desktop dev",
    "dev:mobile-expo": "pnpm --filter @chatbot/mobile-expo start",
    "dev:mobile-native": "pnpm --filter mobile-native start",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --filter shared build && pnpm --filter backend build && pnpm --filter web build && pnpm --filter desktop build",
    "build:shared": "pnpm --filter shared build",
    "build:backend": "pnpm --filter backend build",
    "build:web": "pnpm --filter web build",
    "build:desktop": "pnpm --filter desktop build",
    "build:mobile-expo": "pnpm --filter @chatbot/mobile-expo build:web",
    "build:mobile-native": "pnpm --filter mobile-native build",
    "test": "pnpm --recursive test",
    "test:shared": "pnpm --filter shared test",
    "test:backend": "pnpm --filter backend test",
    "test:web": "pnpm --filter web test",
    "test:desktop": "pnpm --filter desktop test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:packages": "pnpm --recursive lint",
    "lint:packages:fix": "pnpm --recursive lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "prepare": "husky install",
    "db:generate": "pnpm --filter backend db:generate",
    "db:push": "pnpm --filter backend db:push",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:studio": "pnpm --filter backend db:studio",
    "db:seed": "pnpm --filter backend db:seed",
    "db:reset": "pnpm --filter backend db:reset"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@react-native/eslint-config": "^0.72.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "chatbot",
    "ai",
    "cross-platform",
    "electron",
    "react-native",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
